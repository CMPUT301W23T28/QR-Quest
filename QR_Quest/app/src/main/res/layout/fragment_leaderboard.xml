<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F4B961">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LeaderBoard"
            android:textColor="#373535"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editttext"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:hint="search for user"
            android:drawableEnd="@drawable/baseline_search_24"
            android:textColorHint="#393737"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/points_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="points"
                android:padding="10dp"
                android:background="@drawable/textview"

                android:textStyle="bold"/>

            <TextView
                android:id="@+id/qr_collected_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qr_collected"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/textview1"

                android:textStyle="bold"/>

            <TextView
                android:id="@+id/top_qr_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="top_qr"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/textview1"

                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <TextView
                android:visibility="gone"
                android:id="@+id/regionbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter By Region"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/textview1"

                android:textStyle="bold"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/region_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:padding="10dp"

                android:id="@+id/recyclerView"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/persistent_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#D3B996"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/persistent_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/persistent_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="siuuuuu_boy"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-10dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/persistent_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="777777 pts"
                            android:textColor="@color/black"
                            android:textSize="15dp" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>



    </LinearLayout>

</FrameLayout>