<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6850C"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR Quest"
        android:padding="20dp"
        android:background="#7B541B"
        android:textSize="60px"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#7F424040"
            android:shadowDx="5"
            android:shadowDy="10"
            android:shadowRadius="2"
            android:text="Hi Ishan, your QR score is..."
            android:textColor="@color/white"
            android:textSize="70px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="serif"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="10"
            android:shadowRadius="2"
            android:text="658"
            android:textColor="#FFB803"
            android:textSize="300px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="World Rank:  115"
            android:layout_marginTop="50dp"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:textColor="@color/white"
            android:shadowDy="10"
            android:shadowRadius="2"
            android:textSize="70px"
            android:fontFamily="monospace"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR's Collected:  3"
            android:layout_marginTop="10dp"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:textColor="@color/white"
            android:shadowDy="10"
            android:shadowRadius="2"
            android:textSize="70px"
            android:fontFamily="monospace"
            />





    </LinearLayout>


</FrameLayout>