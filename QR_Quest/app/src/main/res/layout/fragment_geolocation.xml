<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:background="@drawable/rounded_edittext"
    android:backgroundTint="@color/orange"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/txtview_geo_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80 pts!"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/chkbox_geo_addloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Current Location"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:buttonTint="@color/black"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edittext_geo_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:background="@drawable/editttext"
        android:layout_marginTop="15dp"
        android:hint="Add a caption"
        android:textColorHint="@color/black"
        android:gravity="start"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_geo_save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="save"
            android:shadowColor="#504C4C"
            android:shadowDx="5"
            android:shadowDy="5"
            android:layout_marginLeft="20dp"
            android:background="#373636"/>
    </LinearLayout>
</LinearLayout>